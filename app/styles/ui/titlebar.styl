.titlebar
  width 100%
  height 25px
  position absolute
  top 0
  z-index 6
  background-color transparent // $titlebar-bg
  -webkit-app-region drag

  .window-controls
    height 100%
    float right 
    -webkit-app-region no-drag

    .btn
      width 40px
      height 100%
      padding 0
      float right
      color $text-color
      text-align center
      font-size 14px
      border none
      border-radius 0
      cursor default
      line-height 25px
      transition .2s ease-in-out
      -webkit-app-region no-drag
      background transparent

      &:hover
        background-color #3e4044
        color $text-highlight-color

      svg
        fill currentColor

    .close-btn
      &:hover
        background-color #e81123 !important

      &:active
        background-color #bf0f1d !important 