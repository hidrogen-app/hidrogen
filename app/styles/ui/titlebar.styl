.titlebar
  width 100%
  height 25px
  -webkit-app-region drag

  .window-controls
    float right 
    -webkit-app-region no-drag

    .btn
      width 40px
      height 100%
      padding 0
      float right
      color $text-dark-color
      text-align center
      font-size 14px
      border none
      border-radius 0
      cursor default
      line-height 25px
      transition .2s ease-in-out
      -webkit-app-region no-drag

      svg
        fill currentColor

    .close-btn
      &:hover
        background-color #e81123 !important

      &:active
        background-color #bf0f1d !important 

.app[theme='dark'] .titlebar
  background-color $titlebar-dark-bg

  .btn:hover
    background-color #3e4044
    color $text-highlight-dark-color