.navigation
    width max-content
    height auto
    margin auto
    margin-top 15px
    margin-bottom 25px
    transition ease-in-out .2s

    &.hidden
      opacity 0
      pointer-events none

    .nav-link
      display inline-block
      margin 10px 30px
      font-family 'ProximaNova'
      cursor pointer
      transition .2s ease-in-out
      color $text-color

      &.selected, &:hover
        color $text-highlight-color
        text-shadow 0 0 20px $text-highlight-color