.loader
  width 100%
  height 775px
  overflow hidden
  position absolute
  top 25px
  z-index 3
  background $primary-dark-color
  display none
  transition 1s ease-in-out

  &.show
    display block

  .ball-container
    width max-content
    height max-content
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)

    .ball
      display inline-block
      background #fff
      border-radius 50%
      width 40px
      height 40px
      box-shadow 0 0 50px #fff
      margin 5px
      animation loaderAnimation 1.6s ease-in-out infinite

      &:nth-child(1)
        animation-delay -1.4s

      &:nth-child(2)
        animation-delay -1s

      &:nth-child(3)
        animation-delay -1.2s

      &:nth-child(4)
        animation-delay -0.6s

      &:nth-child(5)
        animation-delay -0.8s

      &:nth-child(6)
        animation-delay -0.2s

      &:nth-child(7)
        animation-delay -0.4s

    @keyframes loaderAnimation 
      0%, 40%, 100%
        transform scale(0.2)
      20%
        transform scale(1)