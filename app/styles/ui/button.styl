.btn
  display block
  width 160px
  height 45px
  line-height 45px
  font-family 'Roboto'
  font-size 16px
  text-align center
  color $text-dark-color
  background-color $primary-dark-color
  border-style solid
  border-width 1px
  border-color $text-dark-color
  border-radius 4px
  cursor pointer
  transition .2s ease-in-out
  position relative

  &.disabled
    pointer-events none
    opacity .8

  .label
    cursor pointer
    transition .2s ease-in-out

  &:hover
    background-color $secondary-dark-color
    border-color $active-color

    .label
      color $text-highlight-dark-color

    .tooltip
      display block

  .tooltip
    display none
    font-size 12px
    width max-content
    position absolute
    top 110%
    left 50%
    transform translateX(-50%)
    color white
    background $primary-dark-color
    border-radius 5px
    height 20px
    line-height 20px
    padding 5px 10px
    transition ease-in-out .2s

  .loader
    display block
    width max-content
    height max-content
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)

    @keyframes loaderAnimation 
      0%, 40%, 100%
        transform scale(0.6)
      20%
        transform scale(1)

    .loader-item
      display inline-block
      background rgba(255, 255, 255, .3)
      border-radius 50%
      width 10px
      height 10px
      box-shadow 0 0 50px #fff
      margin 2px
      vertical-align middle
      animation loaderAnimation 1s ease-in-out infinite

      &:nth-child(1)
        animation-delay -1s

      &:nth-child(2)
        animation-delay -0.6s

      &:nth-child(3)
        animation-delay -0.2s

      
