  .toolbar
    width max-content
    margin auto
    height 65px
    transition .2s ease-in-out

    .btn
      width 25px
      height 25px
      display inline-block
      margin 20px
      background none
      border none
      position relative

      &:hover 
        .icon
          color $text-highlight-dark-color

      .icon
        font-size 20px
        color $text-dark-color
        transition .2s ease-in-out
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)

      &.active .icon
        color $text-highlight-dark-color

      // Special rule for showing the search input.
      &.active.search-icon + .search-bar
        width 250px

    .update-available-btn 
      .icon
        color #06C392

      &:hover .icon
        color lighten(#06C392, 10%)

    .search-bar
      display inline-block
      position relative
      top -25px
      width 0

      .input
        width inherit
        text-align left
        padding 0 10px

  .empty-library-message
    position absolute
    top 40%
    left 50%
    transform translate(-50%, -50%)
    text-align center
    font-size 20px
    color $text-dark-color
    opacity .4
    transition all .4s

  .add-game
    width 650px
    margin auto
    z-index -999
    opacity 0
    transition all .3s
    transform scale(0)
    height calc(100% - 150px)
    overflow-y scroll
    position relative

    .cancel-btn
      border-radius 50%
      position absolute
      top 0
      right 0
      width 40px
      height 40px
      box-sizing border-box
      border 2px solid rgba(255, 255, 255, .2)
      background none
    
      &:hover
        border-color rgba(255, 255, 255, .45)

        .icon
          color rgba(255, 255, 255, .45)

      .icon
        display block
        line-height 36px
        color rgba(255, 255, 255, .45)

    form
      .text-input
        width 300px
        margin-bottom 20px

        .input
          width 270px

      .submit-btn
        position absolute
        right 0
        bottom 0
        display inline-block
        width 150px !important
        height 40px
        box-sizing border-box
        border 2px solid rgba(20, 255, 0, 0.42) !important
        background none

        &:hover
          border-color rgba(16, 205, 0, 0.8) !important

        .label
          display inline-block
          line-height 40px
          color rgba(16, 205, 0, 0.9) !important

        &:hover .label
          color rgba(16, 205, 0, 1) !important

      .import-btn
        position absolute
        left 0
        bottom 0

      .btn
        display inline-block
        width 300px
        height 40px
        line-height 40px
        box-sizing border-box
        border 2px solid rgba(255, 255, 255, .2)
        background none

        &:hover
          border-color rgba(255, 255, 255, .45)

        .label, .icon
          display inline-block
          color rgba(255, 255, 255, .8)

        &:hover .label, .icon
          color rgba(255, 255, 255, .9)

    .add-form
      display block
      height 300px
      margin-top 110px
      position relative

      .image-input
        width 275px
        height 170px
        background transparent
        position absolute
        top 0
        right 0
        border 1px solid #3e4044
        cursor pointer
        background rgba(0, 0, 0, .15)

        .text-wp
          width max-content
          height max-content
          position absolute
          top 50%
          left 50%
          transform translate(-50%, -50%)

          .text, .icon
            vertical-align middle
            color $text-dark-color
            font-size 16px
                
            .icon
              margin-right 5px

      .file-input
        .icon
          margin-right 10px

    .import-form
      display block
      position relative
      height 350px
      margin-top 90px

      .provider-selector
        margin-bottom 40px

        .provider-btn
          margin auto
          font-size 20px
          margin-bottom 20px
          width 40px
          height 40px
          display block
          border none
          background none

      .add-game-btn
        position absolute
        left 0
        bottom 0


