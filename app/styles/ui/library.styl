  .game-container
    width 100%
    height calc(100% - 65px)
    display grid
    // grid-template-columns repeat(7, 180px)
    // grid-template-columns repeat(6, 200px)
    grid-template-columns repeat(4, 310px)
    box-sizing border-box
    // padding 30px 95px
    // padding 30px 125px
    padding 30px 105px
    overflow-y scroll
    transition all .4s
    position absolute
    top 65px
    left 0
    z-index 7

    .game
      display block
      // This shit follows LA PROPORCION AUREA
      width 275px //140px
      height 170px //180px
      margin 0 auto
      position relative
      margin-bottom 80px

      &.show-menu
        .menu-toggle-btn
          opacity 0 !important

        .menu
          opacity 1 !important 
          z-index 4 !important

        .play-btn
          opacity 0 !important

      &.hide-image 
        .background
          display none !important

      &:hover 
        .title
          color #fff !important
      
        .card
          border-color $active-color

          .menu-toggle-btn
            opacity 1

          .play-btn
            opacity 1

          .bg-hover-overlay
            opacity .6

      .title
        width max-content
        max-width max-content
        color #c1c1c1 !important
        position absolute
        top 100%
        // left 50%
        // transform translateX(-50%)
        font-family 'Roboto'
        line-height 50px
        height 30px
        font-size 14px
        text-align center
        transition ease-in-out .2s

      .card
        width inherit
        height inherit
        // border 1px solid #656565
        border 1px solid #3e4044
        transition .2s ease-in-out

        .play-btn
          display block
          margin auto
          width 100px
          height 40px
          line-height 40px
          position absolute
          top 50%
          left 50%
          transform translate(-50%, -50%)
          // border none
          background transparent
          z-index 3
          opacity 0
          border 2px solid rgba(255, 255, 255, .2)
          
          .label
            color $text-highlight-dark-color

          &:hover
            border-color $active-color
            // background #00ddff

            .label
              color $active-color

        .menu-toggle-btn
          background none
          border none
          width 40px
          height 40px
          position absolute
          top 0
          right 10px
          opacity 0

          .circle
            display inline-block
            width 5px
            height 5px
            background $text-dark-color
            transition ease-in-out .2s
            border-radius 50%

            &:nth-child(2)
              margin-left 3px

            &:nth-child(3)
              margin-left 3px

          &:hover
            .circle
              background #fff

        .menu
          width 100%
          height 100%
          z-index -9999
          opacity 0
          transition all .2s
          position absolute
          top 1px
          left 1px
          // background rgba(0, 0, 0, .6)

          .btn
            background none
            border none
            width 40px
            height 40px
            position absolute
            top 0
            right 0

            .icon
              color #fff

          .btn-group
            width max-content
            height max-content
            position absolute
            top 50%
            left 50%
            transform translate(-50%, -50%)

            .btn
              width 25px
              height 25px
              display inline-block
              margin 35px
              background none
              border none
              position relative

              &:last-child:hover .icon
                color #fa1414 !important

              &:hover 
                .icon
                  color $active-color

              .icon
                font-size 20px
                color $text-dark-color
                transition .2s ease-in-out
                position absolute
                top 50%
                left 50%
                transform translate(-50%, -50%)

        .bg-hover-overlay
          width 100%
          height 100%
          position absolute
          top 0
          left 0
          z-index -1
          opacity 0
          background $primary-dark-color
          transition .2s ease-in-out

        .background
          width inherit
          height inherit
          position absolute
          top 0
          left 0
          display block
          z-index -2

::-webkit-scrollbar
    display none