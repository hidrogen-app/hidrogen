.dialog
  width 100vw
  height calc(100vh - 25px)
  position fixed
  top 25px
  left 0
  // background rgba(0,0,0,0.7)
  z-index -5
  opacity 0
  transition all .3s

  &.opened 
    visibility visible !important
    opacity 1
    z-index 99999

    // .content
      // transform scale(1) translate(-50%, -50%)

  .content
    transition all .2s
    width 100vw
    height calc(100vh - 25px)
    position fixed
    top 25px
    left 0
    // transform scale(0) translate(-50%, -50%)
    // transform-origin top left
    // border-radius 5px
    box-sizing border-box
    // padding 25px
    // Experimental.
    // background #333538d9
    //border 1px solid rgba(255, 255, 255, .3)

    .header
      width 100%
      height 65px
      // background #3a3c40
      position absolute
      top 0
      left 0
      border-radius 5px 5px 0 0
      box-sizing border-box
      padding 25px 25px 0 25px

      .title
        font-size 16px
        color $text-dark-color
        float left

      .close-btn
        float right
        border none
        background none
        width 20px
        height 20px

        &:hover
          color red

        .icon
          position absolute
          top 0
          left 0
          font-size 20px

    .body
