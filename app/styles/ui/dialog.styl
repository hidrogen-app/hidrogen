    .footer
      width 100%
      height 70px
      // background #333538
      position absolute
      bottom 0
      left 0
      border-radius 0 0 5px 5px
      box-sizing border-box
      padding 25px

      .btn
        float right
        background none
        border none
        text-transform uppercase
        font-weight bold
        width max-content
        height max-content
        line-height inherit
        margin-left 40px

        &:first-child
          .label
            color #49FF5F

          &:hover
