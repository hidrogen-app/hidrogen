.random-background
  width 100%
  height 100%
  position absolute
  top 0 // 25px

  .bg-overlay
    width 100%
    height 100%
    opacity .95
    background-color $random-bg-overlay-color
    position absolute
    z-index 1
    top 0
    left 0

  .background
    width 100% //inherit
    height auto // inherit
    position absolute
    top 0 // 50%
    left 0 // 50%
    // transform translate(-50%, -50%)
    z-index 0
