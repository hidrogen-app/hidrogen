changelog()
  $self = '.changelog'
  $header = '.header'
  $header-title = '.title'
  $header-close-btn = '.close-btn'
  $entry = $self + '-entry'

  $self-render-condition = $self + '.show'
  $hidden-content = $self + ' ~ .slideshow'

  { $self }
    display: block
    width: 700px
    height: max-content
    position: absolute
    top: 50%
    left: 50%
    transform: translate(-50%, -50%)
    opacity: 0
    transition ease-in-out .2s
    pointer-events: none

    { $header }
      display: block
      width: 100%
      height: 40px
      line-height: @height
      margin-bottom: 40px

      { $header-title }
        font-size: 24px

      { $header-close-btn }
        border-radius 50%
        position absolute
        top 0
        right 0
        width 40px
        height 40px
        box-sizing border-box
        border 2px solid rgba(255, 255, 255, .2)
        background none
      
        &:hover
          border-color rgba(255, 255, 255, .45)

          .icon
            color rgba(255, 255, 255, .45)

        .icon
          display block
          line-height 36px
          color rgba(255, 255, 255, .45)

    { $entry }
      margin-bottom: 50px

      .version
        display: block
        font-size: 20px
        margin-bottom: 20px

      .item
        display: block
        margin-bottom: 10px

  { $self-render-condition }
    z-index: 3
    opacity: 1
    pointer-events: auto
    
    & ~ .slideshow
      // Styles are being overwritten by authentication.styl
      opacity 0 !important
      pointer-events none !important